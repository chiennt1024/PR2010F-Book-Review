<title>Review <%= @book.name %></title>
<section class="review-book">
	<div class="container-fluid">
		<div class="row">
			<h1><%= @book.name %></h1>
		</div>
		<div class="row">
			<div class="col-sm-2">
				<img width="50px" src="https://upload.wikimedia.org/wikipedia/en/b/bd/Doraemon_character.png">
			</div>
			<div class="col-sm-10">
				<b><%= @book.name %></b><br>
				by <b><%= @book.author.name %></b>
			</div>
		</div>
		<div class="row">
			My rating: 
			<i class="fas fa-star"></i>
			<i class="fas fa-star"></i>
			<i class="fas fa-star"></i>
			<i class="fas fa-star"></i>
			<i class="fas fa-star"></i>
		</div>
		<div class="row">
			<span>What did you think?</span>
		</div>
	</div>
</section>

<%= render 'form' %>