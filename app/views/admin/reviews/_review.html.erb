<tr>
  <td><%= review.id %></td>
  <td><%= review.user_id %></td>
  <td><%= review.book_id %></td>
  <td><%= review.content %></td>
  <td>
    <a href="<%= edit_admin_review_path(review.id) %>" type="button" class="btn btn-primary m-1"><i class="fa fa-edit"></i></a>
    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal<%=review.id%>">
      <i class="fa fa-trash"></i>
    </button>
    <!-- The Modal -->
    <div class="modal" id="deleteModal<%=review.id%>">
      <div class="modal-dialog">
        <div class="modal-content">

          <!-- Modal Header -->
          <div class="modal-header">
            <h4 class="modal-title">Delete Confirmation</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
          </div>

          <!-- Modal body -->
          <div class="modal-body">
            You sure delete review with name: <%= review.content %>
          </div>

          <!-- Modal footer -->
          <div class="modal-footer">
            <%= link_to "Delete", admin_review_path(review.id), method: :delete, class: "btn btn-danger" %>
              <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
          </div>
        </div>
      </div>
    </div>
  </td>
</tr>