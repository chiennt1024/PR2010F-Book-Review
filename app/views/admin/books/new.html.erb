<h1>New Book</h1>
<%= form_for [:admin, @book], html: {class: "container-sm"} do |book| %>
	<!-- Error messages does not work -->
	<% if @book.errors.any? %>
	  <div id="error_explanation">
	    <ul>
	      <% @book.errors.each do |error| %>
	        <li><%= error.full_message %></li>
	      <% end %>
	    </ul>
	  </div>
	<% end %>

	<div class="form-group">
		<%= book.text_field :name, placeholder: "Enter book name", class: "form-control", id: "name" %>
	</div>
	<div class="form-group">
		<%= book.file_field :image, accept: "image/jpeg,image/gif,image/png", class: "form-control", id: "book_image" %>
	</div>
	<div class="form-group">
		<%= collection_select(:book, :category_id, Category.all, :id, :name, {prompt: "Select category"}, {:class => "form-control book_category"})%>
	</div>
	<div class="form-group">
		<%= collection_select(:book, :author_id, Author.all, :id, :name, {prompt: "Select author"}, {:class => "form-control book_author"})%>
	</div>
	<div class="form-group">
		<%= book.text_area :description, placeholder: "Enter book description", class: "form-control", id: "description" %>
	</div>
	<%= book.submit "Add book", class: "btn btn-primary" %>
<% end %>
