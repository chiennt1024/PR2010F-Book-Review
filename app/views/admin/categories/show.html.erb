<h1>Categories info</h1>
<div class="form-group">
	<span>ID: </span><%= @category.id %>
</div>
<div class="form-group">
	<span>Category: </span><%= @category.name %>
</div>
<div class="row">
	<div class="col">
		<%= link_to "Edit", edit_admin_category_path(@category.id), class: "btn btn-primary" %>
		<%= link_to "Delete", [:admin ,@category], method: :delete, data: {confirm: "You sure?" }, class: "btn btn-danger" %>
	</div>
</div>
