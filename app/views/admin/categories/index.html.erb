<div class="container">
	<h1>Category Manager</h1>
	<table class="table">
	    <thead class="thead-light">
	      <tr>
	        <th>ID</th>
	        <th>Category</th>
	        <th><a href="<%= new_admin_category_path %>" type="button" class="btn btn-primary">New <i class="fa fa-plus"></i></a>
	        </th>
	      </tr>
	    </thead>
	    <tbody>
	    	<% if @categories.any? %>
	    		<% @categories.each do |category| %>
			      <tr>
			        <td><%= category.id %></td>
			        <td><%= category.name %></td>
			        <td>
			        	<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#editModal<%=category.id%>">
			        		<i class="fa fa-edit"></i>
			        	</button>
			        	<!-- The Modal -->
						  	<div class="modal" id="editModal<%=category.id%>">
							    <div class="modal-dialog">
							      <div class="modal-content">

							        <!-- Modal Header -->
							        <div class="modal-header">
							          <h4 class="modal-title">Edit</h4>
							          <button type="button" class="close" data-dismiss="modal">&times;</button>
							        </div>

							        <!-- Modal body -->
							        <div class="modal-body">
							          <%= form_for [:admin, category] do |category|%>
												<div class="form-group">
													<%= category.label :id %>
													<%= category.text_field :id, class: "form-control", disabled: "disabled"%>
												</div>
												<div class="form-group">
													<%= category.label :name %>
													<%= category.text_field :name, class: "form-control"%>
												</div>
							        </div>

							        <!-- Modal footer -->
							        <div class="modal-footer">
							        		<%= category.button "Edit", class: "btn btn-primary" %>
							          	<button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
							        </div>
							        <% end %>
							      </div>
							    </div>
						  	</div>
			        	<button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal<%=category.id%>">
			        		<i class="fa fa-trash"></i>
			        	</button>
			        	<!-- The Modal -->
						  	<div class="modal" id="deleteModal<%=category.id%>">
							    <div class="modal-dialog">
							      <div class="modal-content">

							        <!-- Modal Header -->
							        <div class="modal-header">
							          <h4 class="modal-title">Delete Confirmation</h4>
							          <button type="button" class="close" data-dismiss="modal">&times;</button>
							        </div>

							        <!-- Modal body -->
							        <div class="modal-body">
							          You sure delete category with name: <%= category.name %>
							        </div>

							        <!-- Modal footer -->
							        <div class="modal-footer">
							        	<%= link_to "Delete", admin_category_path(category.id), method: :delete, class: "btn btn-danger" %>
							          	<button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
							        </div>

							      </div>
							    </div>
						  	</div>
			        </td>
			      </tr>
			    <% end %>
		    <% end %>
	    </tbody>
	</table>

</div>
