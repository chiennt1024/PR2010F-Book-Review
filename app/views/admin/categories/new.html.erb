<h1>New Category</h1>
<%= form_for [:admin, @category], html: {class: "container-sm"} do |category| %>
	<div class="form-group">
		<%= category.text_field :name, placeholder: "Enter category name", class: "form-control", id: "name" %>
	</div>
	<%= category.submit "Add category", class: "btn btn-primary" %>
<% end %>
