<h1>Edit Author</h1>
<%= form_for [:admin, @author], html: {class: "container-sm"} do |author|%>
	<div class="form-group">
		<%= author.label :id %>
		<%= author.text_field :id, class: "form-control", disabled: "disabled"%>
	</div>
	<div class="form-group">
		<%= author.label :name %>
		<%= author.text_field :name, class: "form-control"%>
	</div>
	<div class="form-group">
		<%= author.label :description %>
		<%= author.text_area :description, class: "form-control"%>
	</div>
	<%= author.button "Edit", class: "btn btn-primary" %>
	<%= link_to "Delete", [:admin ,@author], method: :delete, data: {confirm: "You sure?" }, class: "btn btn-danger" %>
<% end %>
